       android:id="@+id/btnQrcode"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="圖片內容辨識"
        android:id="@+id/btnImage"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="臉部偵測"
        android:id="@+id/btnFace"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="文字偵測"
        android:id="@+id/btnText"/>

</LinearLayout>